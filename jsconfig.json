{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "ember-can/tests/*": ["tests/*"],
      "ember-can/*": ["addon/*"],
      "dummy": ["tests/dummy*"],
    }
  },
  "include": ["app/**/*", "tests/**/*", "addon/**/*"]
}
